{
  "name": "snowflakepoc2",
  "version": "1.0.0",
  "description": "Claude Desktop-like UI powered by Claude Code with Activity Schema 2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:env && npm run setup:db",
    "setup:env": "cp .env.example .env && echo 'Please edit .env with your credentials'",
    "setup:db": "snowsql -f infra/snowflake/setup.sql",
    "dev": "concurrently \"npm run dev:bridge\" \"npm run dev:ui\"",
    "dev:bridge": "cd apps/ccode-bridge && npm run dev",
    "dev:ui": "cd apps/ui-shell && npm run dev",
    "test": "npm run test --workspaces",
    "validate:victory": "node scripts/victory-audit.js",
    "agents:snowflake": "cd packages/agents/snowflake-agent && ccode --config ccode.toml",
    "agents:audit": "cd packages/agents/audit-agent && ccode --config ccode.toml",
    "validate-schema": "node scripts/validate-schema.js",
    "bootstrap-schema": "node scripts/run-bootstrap.js",
    "bootstrap-activity-views": "node scripts/run-activity-views.js",
    "lint:schemas": "eslint . --rule 'no-hardcoded-schemas: error'",
    "codegen": "node scripts/codegen-schema.js",
    "prebuild": "npm run codegen",
    "build": "echo 'Build process goes here'",
    "lint:contract": "node scripts/lint-contract-compliance.js",
    "validate:runtime": "node scripts/validate-runtime-schema.js",
    "validate:runtime:strict": "node scripts/validate-runtime-schema.js --strict",
    "validate:runtime:fix": "node scripts/validate-runtime-schema.js --generate-fix",
    "test:contract": "node test/contract-compliance.test.js",
    "test:all": "npm run test:contract && npm run lint:contract",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}

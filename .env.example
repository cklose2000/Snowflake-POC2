# SnowflakePOC2 Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SNOWFLAKE CONNECTION - Required for all features
# =============================================================================
SNOWFLAKE_ACCOUNT=your-account.us-east-1
SNOWFLAKE_USERNAME=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_ROLE=CLAUDE_BI_ROLE
SNOWFLAKE_WAREHOUSE=CLAUDE_WAREHOUSE
SNOWFLAKE_DATABASE=CLAUDE_BI
SNOWFLAKE_SCHEMA=ANALYTICS

# =============================================================================
# DASHBOARD FACTORY CONFIGURATION
# =============================================================================
# Dashboard-specific warehouse (dedicated for dashboard operations)
DASHBOARD_WAREHOUSE=DASHBOARD_WH

# Snowflake database and schemas for Dashboard Factory
DASHBOARD_DB=ANALYTICS
DASHBOARD_SCHEMA=PUBLIC
STREAMLIT_SCHEMA=DASH_APPS

# Activity Schema configuration
ACTIVITY_DB=ANALYTICS
ACTIVITY_SCHEMA=ACTIVITY

# Query correlation and monitoring
QUERY_TAG_PREFIX=ccode-dash

# Dashboard Factory options
DASHBOARD_DRY_RUN=false
DASHBOARD_TIMEOUT=300000

# Optional: Email notifications (if configured in Snowflake)
# NOTIFICATION_INTEGRATION=EXEC_EMAIL

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# API Server port
BRIDGE_PORT=3001

# WebSocket port  
WS_PORT=8080

# =============================================================================
# CLAUDE CODE INTEGRATION
# =============================================================================
# These are used by the existing Claude Code bridge
CLAUDE_PROJECT_ID=your-claude-project-id
CLAUDE_API_KEY=your-claude-api-key

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
# Enable debug logging
DEBUG=false

# Resource monitoring
ENABLE_RESOURCE_MONITORING=true

# Cost tracking
COST_TRACKING_ENABLED=true
MAX_DASHBOARD_COST_USD=0.10